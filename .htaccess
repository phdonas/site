# BEGIN PH HUB - CONFIGURAÇÃO DE AMBIENTE HOSTGATOR
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # 1. Ignorar explicitamente a pasta do WordPress e a API
  RewriteCond %{REQUEST_URI} ^/wordpress [NC]
  RewriteRule . - [L]
  
  # 2. Ignorar arquivos de código e recursos para evitar erro 'Unexpected token <'
  RewriteCond %{REQUEST_FILENAME} \.(js|ts|tsx|jsx|css|png|jpg|jpeg|gif|ico|svg|pdf|json)$ [NC]
  RewriteRule . - [L]

  # 3. Se o arquivo ou pasta física existir, serve ele diretamente
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # 4. Fallback para o index.html (SPA routing)
  RewriteRule . /index.html [L]
</IfModule>

<IfModule mod_mime.c>
  # Forçar o tipo MIME correto para que o Babel/Navegador não se confundam
  AddType application/javascript .tsx
  AddType application/javascript .ts
</IfModule>

<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    <FilesMatch "\.(html|tsx|ts)$">
        Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
    </FilesMatch>
</IfModule>
# END PH HUB
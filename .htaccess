# BEGIN PH HUB - CONFIGURAÇÃO DE AMBIENTE REACT SEM BUILD
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # 1. Ignorar o diretório do WordPress (preserva o Admin e API)
  RewriteCond %{REQUEST_URI} ^/wordpress [NC]
  RewriteRule . - [L]
  
  # 2. Se o arquivo ou pasta física existir, serve ele diretamente (imagens, pdfs, etc)
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # 3. Tudo o mais vai para o index.html (Roteamento React)
  RewriteRule . /index.html [L]
</IfModule>

<IfModule mod_mime.c>
  # Garante que o servidor informe ao navegador que arquivos de código são Scripts
  AddType application/javascript .tsx
  AddType application/javascript .ts
  AddType application/javascript .jsx
</IfModule>

<IfModule mod_headers.c>
    # Permite que o frontend busque dados no subdiretório /wordpress sem erro de CORS
    Header set Access-Control-Allow-Origin "*"
    
    # FORÇA LIMPEZA DE CACHE NO DEPLOY
    <FilesMatch "\.(html|tsx|ts|yml)$">
        Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "Wed, 11 Jan 1984 05:00:00 GMT"
    </FilesMatch>
</IfModule>
# END PH HUB
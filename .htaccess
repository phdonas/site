# PH DONASSOLO - HUB CONFIG
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # 1. Ignorar a pasta do WordPress (essencial para a API funcionar)
    RewriteRule ^wordpress/ - [L,NC]

    # 2. Se o arquivo ou pasta existir fisicamente, não redirecione
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule . - [L]

    # 3. EXCEÇÃO CRÍTICA: Arquivos de código NÃO devem ser redirecionados para o index.html
    # Isso evita que o Babel receba HTML quando pede um .tsx
    RewriteCond %{REQUEST_URI} \.(tsx|ts|js|jsx|css|json)$ [NC]
    RewriteRule . - [L]

    # 4. SPA Routing: Tudo o que não for arquivo real vai para o index.html
    RewriteRule ^ index.html [L]
</IfModule>

<IfModule mod_mime.c>
    # Informa ao servidor que .tsx e .ts são arquivos de script
    AddType application/javascript .tsx
    AddType application/javascript .ts
</IfModule>

<IfModule mod_headers.c>
    # Desabilita cache para arquivos de desenvolvimento para ver as mudanças na hora
    <FilesMatch "\.(tsx|ts|html)$">
        Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
    </FilesMatch>
    Header set Access-Control-Allow-Origin "*"
</IfModule>